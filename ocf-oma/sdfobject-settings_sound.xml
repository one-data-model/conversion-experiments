<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
    <Object ObjectType="MODefinition">
        <Name>settings.sound</Name>
        <Description1>Gets current device sound settings.</Description1>
        <ObjectID>65535</ObjectID>
        <ObjectURN>urn:oma:lwm2m:ext:65535</ObjectURN>
        <LWM2MVersion>1.0</LWM2MVersion>
        <ObjectVersion>1.0</ObjectVersion>
        <MultipleInstances>Multiple</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Resources>
            <Item ID="1">
                <Name>speaker</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Type>String</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>Device Settings Sound - Speaker. Client can change speaker using supported-speakers property.</Description>
            </Item>
            <Item ID="2">
                <Name>supported-speakers</Name>
                <Operations>R</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Type>String</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>The array of possible speakers the device supports. This property should be added if speaker is supported.</Description>
            </Item>
            <Item ID="3">
                <Name>sound-mode</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Type>String</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>Device Settings Sound - Sound Mode. Client can change sound-mode using supported-sound-modes property.</Description>
            </Item>
            <Item ID="4">
                <Name>supported-sound-modes</Name>
                <Operations>R</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Type>String</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>The array of possible sound modes the device supports. This property should be added if sound-mode is supported.</Description>
            </Item>
            <Item ID="5">
                <Name>auto-volume</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Type>Boolean</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>Automatically equalizes the volume level when switching to antother channel.</Description>
            </Item>
            <Item ID="6">
                <Name>dolby-atmos-compatibility</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Type>Boolean</Type>
                <RangeEnumeration/>
                <Units/>
                <Description>Recent devices support dolby-atmos mode.</Description>
            </Item>
        </Resources>
    </Object>
</LWM2M>
